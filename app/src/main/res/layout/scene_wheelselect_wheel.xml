<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <com.littleones.fragenrondell.custom_views.SelectionWheel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:pointerRadius="4dp"
        custom:autoCenterPointerInSlice="true"
        custom:wheelRotation="0"
        android:background="@android:color/white"
        custom:highlightStrength="1.12"
        android:layout_weight="100"
        android:padding="10dp"
        android:id="@+id/sc_wheel"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_questioning"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/iv_questioned"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_back"
        android:clickable="true"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:src="@drawable/ic_arrow_back_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>